<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/curve_black"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:layout_margin="10dp"
            android:background="@drawable/curve_orange"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="   --:--   "
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/curve_green"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/onclick"
                android:onClick="onButtonClicked"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="  Set Time 1 " />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:background="@drawable/curve_orange"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/curve_green"
                android:text="   --:--   "
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onButtonClicked2"
                android:padding="5dp"
                android:background="@drawable/onclick"
                android:layout_margin="5dp"
                android:text="  Set Time 2 " />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>